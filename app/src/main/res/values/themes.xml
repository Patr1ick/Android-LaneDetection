<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LaneDetection" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <!-- Customize your theme here. -->
        <item name="aboutStyle">@style/Widget.App.AboutPage</item>

        <item name="android:colorBackground">@color/bg_light</item>
    </style>

    <style name="Widget.App.AboutPage" parent="about_About">
        <item name="aboutBackground">@color/bg_light</item>
        <item name="aboutElementIconTint">@color/light_darker</item>
    </style>
</resources>